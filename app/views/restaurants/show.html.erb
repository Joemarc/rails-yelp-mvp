<div class= "text-center padded">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.phone_number %></p>
  <p class= "list-inline"><%= link_to "All restaurants", restaurants_path, class: 'btn btn-primary' %></p>
  <h1>Reviews</h1>
  <p class= "list-inline"><%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %></p>

  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
  <% end %>
</div>
